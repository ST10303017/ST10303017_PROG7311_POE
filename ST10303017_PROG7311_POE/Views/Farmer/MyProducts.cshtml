@model IEnumerable<ST10303017_PROG7311_POE.Models.Product>

@{
    ViewData["Title"] = "My Products";
}

<div class="page-header">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="AddProduct" class="btn btn-primary-accent">
        <i class="bi bi-plus-circle-fill me-2"></i>Add New Product
    </a>
</div>

@if (!Model.Any())
{
    <div class="modern-card text-center py-5">
        <i class="bi bi-box-seam display-1 text-primary-accent mb-3"></i>
        <h3 class="text-muted">No Products Yet</h3>
        <p class="text-muted mb-4">It looks like you haven't added any products. Get started now!</p>
        <a asp-action="AddProduct" class="btn btn-primary-accent btn-lg">Add your first product</a>
    </div>
}
else
{
    <div class="scrollable-list-container">
        <div class="product-list">
            @foreach (var item in Model)
            {
                <div class="list-item-card">
                    <div class="item-details">
                        <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                        <span><i class="bi bi-tag-fill me-1 text-muted"></i> Category: @Html.DisplayFor(modelItem => item.Category)</span>
                        <span class="ms-md-3"><i class="bi bi-calendar-event-fill me-1 text-muted"></i> Production: @item.ProductionDate.ToString("dd/MM/yyyy")</span>
                    </div>
                    <div class="item-actions">
                    </div>
                </div>
            }
        </div>
    </div>
}