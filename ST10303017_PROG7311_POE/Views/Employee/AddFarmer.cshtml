@model ST10303017_PROG7311_POE.Models.ViewModels.AddFarmerViewModel

@{
    ViewData["Title"] = "Add New Farmer";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-7">
        <div class="modern-card">
            <div class="modern-card-header text-center">
                <h2 class="modern-card-title"><i class="bi bi-person-plus-fill me-2 text-primary-accent"></i>@ViewData["Title"]</h2>
                <p class="modern-card-subtitle">Create a new account for a farmer.</p>
            </div>

            <form asp-action="AddFarmer" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="e.g., farmer@example.com" />
                    <span asp-validation-for="Email" class="text-danger d-block mt-1 small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter a secure password" />
                    <span asp-validation-for="Password" class="text-danger d-block mt-1 small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm the password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger d-block mt-1 small"></span>
                </div>

                <div class="modern-card-actions mt-4">
                    <a asp-action="ListFarmers" class="btn btn-outline-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary-accent"><i class="bi bi-check-lg me-2"></i>Create Farmer Account</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}