@model IEnumerable<ST10303017_PROG7311_POE.Models.ApplicationUser>

@{
    ViewData["Title"] = "Manage Farmers";
}

<div class="page-header">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="AddFarmer" class="btn btn-primary-accent">
        <i class="bi bi-person-plus-fill me-2"></i>Add New Farmer
    </a>
</div>

@if (!Model.Any())
{
    <div class="modern-card text-center py-5">
        <i class="bi bi-people-fill display-1 text-primary-accent mb-3"></i> 
        <h3 class="text-muted">No Farmers Registered</h3>
        <p class="text-muted mb-4">There are currently no farmer accounts in the system.</p>
        <a asp-action="AddFarmer" class="btn btn-primary-accent btn-lg">Add the first farmer</a> 
    </div>
}
else
{
    <div class="scrollable-list-container">
        <div class="farmer-list">
            @foreach (var farmer in Model)
            {
                <div class="list-item-card">
                    <div class="item-details">
                        <strong><i class="bi bi-person-circle me-2 text-muted"></i> @Html.DisplayFor(modelItem => farmer.Email)</strong>
                        <span><i class="bi bi-key-fill me-1 text-muted"></i> User ID: @Html.DisplayFor(modelItem => farmer.Id)</span>
                    </div>
                    <div class="item-actions">
                        <a asp-controller="Employee" asp-action="ViewFarmerProducts" asp-route-farmerId="@farmer.Id" class="btn btn-sm btn-outline-primary-accent">
                            <i class="bi bi-eye-fill me-1"></i> View Products
                        </a>
                    </div>
                </div>
            }
        </div>
    </div> 
}